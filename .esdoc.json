{
    "source": "./src",
    "destination": "./docs/reference",
    "plugins": [
        {
            "name": "esdoc-standard-plugin",
            "option": {
                "test": {
                    "source": "./src/",
                    "interfaces": [
                        "describe",
                        "it",
                        "context",
                        "suite",
                        "test"
                    ],
                    "includes": [
                        "(spec|Spec|test|Test)\\.js$"
                    ],
                    "excludes": [
                        "\\.config\\.js$"
                    ]
                }
            }
        },
        {
            "name": "esdoc-ecmascript-proposal-plugin",
            "option": {
                "all": true
            }
        },
        {
            "name": "esdoc-jsx-plugin",
            "option": {
                "enable": true
            }
        }
    ]
}